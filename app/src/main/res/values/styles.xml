<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Main">

    </style>

    <style name="Main.Switch">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingEnd">5dp</item>

        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/main_level4</item>
        <item name="android:switchMinWidth">@dimen/switch_width</item>

        <item name="android:track">@drawable/switch_track_selector</item>
        <item name="android:thumb">@drawable/switch_thumb_selector</item>
    </style>

    <style name="DialogStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/menu_dialog_items_margin_bottom</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DialogStyle.RadioButton">
        <item name="android:layout_width">@dimen/menu_theme_radiobutton_size</item>
        <item name="android:layout_height">@dimen/menu_theme_radiobutton_size</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:button">@null</item>
    </style>

    <style name="DialogStyle.CheckBox">
        <item name="android:gravity">start</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SpaceStyle">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>